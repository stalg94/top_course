@model InAndOut.Models.Expense

<form method="post" asp-action="Create">
    <div class="borer p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseNane"></label>

                    </div>
                    <div class="col-6">
                        <label asp-for="CostAmount"></label>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseNane" class="form-control" />
                        <span asp-validation-for="ExpenseNane" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="CostAmount" class="form-control" />
                        <span asp-validation-for="CostAmount" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2  row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



