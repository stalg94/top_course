@model InAndOut.Models.Expense

<form method="post" asp-action="Create">
    <div class="border p-3">
       @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ExpenseNane"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CostAmount"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="ExpenseType"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ExpenseNane" class="form-control" />
                        <span asp-validation-for="ExpenseNane" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="CostAmount" class="form-control" />
                        <span asp-validation-for="CostAmount" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select asp-for="ExpenseTypeId" asp-items="@ViewBag.TypeDropDown" class="form-control" >
                            <option>Select Expense Type</option>
                        </select>
                        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-2  row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
@{ <partial name="_ValidationScriptsPartial" />}
}



